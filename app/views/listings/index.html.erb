<div class="w-full">
  <% content_for :title, "Listings" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Listings</h1>
    <%= link_to "New listing", new_listing_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <br/>
  <div id="listings" class="w-full grid md:grid-cols-4 gap-8">
    <% @listings.each do |listing| %>
    
      <%= render "listing_card", listing: listing %>
    <% end %>
  </div>
</div>

 